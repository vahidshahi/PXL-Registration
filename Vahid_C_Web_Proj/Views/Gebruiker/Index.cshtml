@model IEnumerable<Vahid_C_Web_Proj.Models.Data.Gebruiker>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p>
    @using (@Html.BeginForm("Index", "Gebruiker", FormMethod.Get))
{
        <b> Search By:</b>
        @Html.RadioButton("searchBy", "Naam", true)<text>Naam</text>
   @Html.RadioButton("searchBy", "Email")<text>Email</text><br />
   @Html.TextBox("search")<input type = "submit" value = "search" />


    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voornaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voornaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GebruikerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GebruikerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GebruikerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
